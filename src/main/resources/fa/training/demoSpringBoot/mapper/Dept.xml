    <select id="selectAllDept" resultMap="result">
        SELECT * FROM dept;
    </select>
     
    <select id="selectProjectById" parameterType="int" resultType="Dept">
        SELECT d.dept_id,d.dept_name FROM dept d 
        join project p on p.dept_id = d.dept_id
        WHERE p.project_id = #{project_id};
    </select>
     
    <resultMap id = "result" type = "Dept">
       <result property = "dept_id" column = "dept_id"/>
       <result property = "dept_name" column = "dept_name"/>
    </resultMap>
